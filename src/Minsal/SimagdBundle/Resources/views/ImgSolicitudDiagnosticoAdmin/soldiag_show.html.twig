{# empty Twig template #}

{% extends 'MinsalSimagdBundle::simagd_base_show.html.twig' %}

{% block actions %}
    <li>
        {% if ( ( is_granted('ROLE_MINSAL_SIMAGD_ADMIN_IMG_SOLICITUD_DIAGNOSTICO_CREATE') and
                                is_granted('ROLE_MINSAL_SIMAGD_ADMIN_IMG_ESTUDIO_PACIENTE_VIEW') ) or is_granted('ROLE_ADMIN') ) %}
            {% include 'MinsalSimagdBundle:ImgEstudioPacienteAdmin:est_recuperarEstudio_button.html.twig'
                            ignore missing with { 'estudioPaciente': object.idEstudio } %}
        {% endif %}
    </li>
    <li>
        {% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') and
		( app.user.getIdEstablecimiento.getId == object.idSolicitudEstudio.idAtenAreaModEstab.getIdEstablecimiento.getId ) and
                ( object.idUserReg.id == app.user.id or is_granted('ROLE_ADMIN') ) %}
            {% include 'SonataAdminBundle:Button:edit_button.html.twig' %}
        {% endif %}
    </li>
    <li>{% include 'SonataAdminBundle:Button:history_button.html.twig' %}</li>
    <li>{% include 'SonataAdminBundle:Button:list_button.html.twig' %}</li>
{% endblock %}

{% block simagd_form_navbar_brand_title %}
    <span class="navbar-brand">
        <span class="label label-primary-v4">
            <i class="fa fa-paperclip"></i> <i class="fa fa-eye"></i> Solicitud de diagnóstico para estudio de: <i>{{ object.idSolicitudEstudio.idExpediente.idPaciente|truncate(50) }}</i>
        </span>
    </span>
{% endblock %}

{# muestra de información de apoyo #}
{% block custom_entity_support %}
    <div id="custom-entity-content-body">
        {% if object.idSolicitudEstudio is not null and object.idEstudio is not null %}
            {{ render(controller( 'MinsalSimagdBundle:ImgSolicitudDiagnosticoAdmin:mostrarInformacionModal',
                                                    { 'idSolicitudEstudioPadre' : object.idSolicitudEstudio.id,
                                                        'idEstudioPadre' : object.idEstudio.id,
                                                        'id' : object.id ? object.id : -1,
                                                        '_sonata_admin' : 'minsal_simagd.admin.img_solicitud_diagnostico' } )) }}
        {% endif %}
    </div>
{% endblock %}