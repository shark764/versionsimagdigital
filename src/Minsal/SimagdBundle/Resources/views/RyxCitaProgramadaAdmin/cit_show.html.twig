{# empty Twig template #}

{% extends 'MinsalSimagdBundle::simagd_base_show.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    
    {# iCheck #}
    <link href="{{ asset('bundles/minsalsimagd/plugin/icheck-1.x/skins/minimal/red.css') }}" type="text/css" rel="stylesheet" />
    
    {# bootstrapvalidator #}
    <link href="{{ asset('bundles/minsalsimagd/bootstrapvalidator-dist-0.5.2/dist/css/bootstrapValidator.min.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    
    {# iCheck #}
    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/plugin/icheck-1.x/icheck.js') }}" ></script>
    
    {# bootstrapvalidator #}
    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/bootstrapvalidator-dist-0.5.2/dist/js/bootstrapValidator.min.js') }}" ></script>
    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/bootstrapvalidator-dist-0.5.2/dist/js/language/es_ES.js') }}" ></script>
{% endblock %}

{% block actions %}
    <li>{% include 'SonataAdminBundle:Button:edit_button.html.twig' %}</li>
    <li>{% include 'SonataAdminBundle:Button:history_button.html.twig' %}</li>
    <li>{% include 'SonataAdminBundle:Button:list_button.html.twig' %}</li>
    <li>{% include 'MinsalSimagdBundle:RyxCitaProgramadaAdmin:cit_confirmarCita_button.html.twig' %}</li>
    <li>{% include 'MinsalSimagdBundle:RyxCitaProgramadaAdmin:cit_cancelarCita_button.html.twig' %}</li>
{% endblock %}

{% block simagd_form_navbar_brand_title %}
    <span class="navbar-brand">
        <span class="label label-primary-v4">
            <i class="fa fa-tags"></i> <i class="fa fa-eye"></i> Cita programada para: <i>{{ object.idSolicitudEstudio.idExpediente.idPaciente|truncate(50) }}</i>
        </span>
    </span>
{% endblock %}

{# muestra de informaci√≥n de apoyo #}
{% block custom_entity_support %}
    <div id="custom-entity-content-body">
        {% if object.idSolicitudEstudio is not null %}
            {{ render(controller( 'MinsalSimagdBundle:RyxCitaProgramadaAdmin:mostrarInformacionModal',
                                                    { 'idSolicitudEstudioPadre' : object.idSolicitudEstudio.id,
                                                        'id' : object.id ? object.id : -1,
                                                        '_sonata_admin' : 'minsal_simagd.admin.ryx_cita_programada' } )) }}
        {% endif %}
    </div>
{% endblock %}

{% block content %}
    
    {{ parent() }}

    {# Modal Cancelar Cita#}
    {% include 'MinsalSimagdBundle:RyxCitaProgramadaAdmin:cit_cancel_modal.html.twig' %}
    
{% endblock %}