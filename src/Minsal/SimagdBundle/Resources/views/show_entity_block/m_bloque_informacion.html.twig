{# empty Twig template #}

    <table class="table table-condensed">
        {% if modalidadInfo is not null %}
            <tr>
                <th class="col-md-2">Área:</th>
                <td class="col-md-4">
                    {{ modalidadInfo.idarea }}
                </td>
                <th class="col-md-2">Nombre:</th>
                <td class="col-md-4">
                    {{ modalidadInfo }}
                </td>
            </tr>
            <tr>
                <th class="col-md-2">Administrativa:</th>
                <td class="col-md-4">
                    {{ modalidadInfo.administrativa }}
                </td>
                <th class="col-md-2">Creado:</th>
                <td class="col-md-4">
                    {% if modalidadInfo.fechahorareg is not null %}
                    	{{ modalidadInfo.fechahorareg|format_date('EEEE, MMMM d, yyyy', 'es_ES') ~ ' ' ~ modalidadInfo.fechahorareg|date('H:i:s A') }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th class="col-md-2">Editado:</th>
                <td class="col-md-4">
                    {% if modalidadInfo.fechahoramod is not null %}
                    	{{ modalidadInfo.fechahoramod|format_date('EEEE, MMMM d, yyyy', 'es_ES') ~ ' ' ~ modalidadInfo.fechahoramod|date('H:i:s A') }}
                    {% endif %}
                </td>
                <th class="col-md-2">Código:</th>
                <td class="col-md-4">
                    {{ modalidadInfo.imgCodigo }}
                </td>
            </tr>
            <tr>
                <th class="col-md-2">Usuario que registró:</th>
                <td class="col-md-4">
                    {% if modalidadInfo.idusuarioreg is not null %}
                    	{{ modalidadInfo.idusuarioreg.idEmpleado }} <strong> ( {{ modalidadInfo.idusuarioreg.username }} ) </strong>
                    {% endif %}
                </td>
                <th class="col-md-2">Último usuario que editó:</th>
                <td class="col-md-4">
                    {% if modalidadInfo.idusuariomod is not null %}
                    	{{ modalidadInfo.idusuariomod.idEmpleado }} <strong> ( {{ modalidadInfo.idusuariomod.username }} ) </strong>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th class="col-md-2">Descripción:</th>
                <td class="col-md-4">
                    {{ modalidadInfo.imgDescripcion }}
                </td>
                <th class="col-md-2">Observaciones:</th>
                <td class="col-md-4">
                    {{ modalidadInfo.imgObservaciones }}
                </td>
            </tr>
            <tr>
                <th class="col-md-2">Servicio de atención:</th>
                <td class="col-md-4">
                    {{ modalidadInfo.idAtencion }}
                </td>
            </tr>

        {% else %}
            <tr>
                <td class="col-md-12">
                    <div class="alert alert-info alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only"> Cerrar </span>
                        </button>
                        <strong>Sin resultados!</strong> No se encontró registro.
                    </div>
                </td>
            </tr>
        {% endif %}
    </table>