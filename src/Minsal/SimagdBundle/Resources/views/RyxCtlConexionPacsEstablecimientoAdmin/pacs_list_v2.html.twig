{# empty Twig template #}

{% extends 'MinsalSimagdBundle::simagd_base_list_v2.html.twig' %}

{# Permisos pacs #}
{% set _PACS_ALLOW_CREATE 	= is_granted('ROLE_MINSAL_SIMAGD_ADMIN_IMG_CTL_PACS_ESTABLECIMIENTO_CREATE') or is_granted('ROLE_ADMIN') ? true : false %}
{% set _PACS_ALLOW_EDIT 	= is_granted('ROLE_MINSAL_SIMAGD_ADMIN_IMG_CTL_PACS_ESTABLECIMIENTO_EDIT') or is_granted('ROLE_ADMIN') ? true : false %}
{% set _PACS_ALLOW_LIST 	= is_granted('ROLE_MINSAL_SIMAGD_ADMIN_IMG_CTL_PACS_ESTABLECIMIENTO_LIST') or is_granted('ROLE_ADMIN') ? true : false %}
{% set _PACS_ALLOW_VIEW 	= is_granted('ROLE_MINSAL_SIMAGD_ADMIN_IMG_CTL_PACS_ESTABLECIMIENTO_VIEW') or is_granted('ROLE_ADMIN') ? true : false %}

{% block stylesheets %}
    {{ parent() }}

    {# bootstrap-editable #}
    <link href="{{ asset('bundles/minsalsimagd/plugin/bootstrap3-editable-1.5.1/bootstrap3-editable/css/bootstrap-editable.css') }}" type="text/css" rel="stylesheet" media="screen" />

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        /*
         * 
         * @type String
         * navbar menu container for bstables
         */
        var $pattern_bstable_container  = 'menu-listas-conexiones-pacs';
        
	var $pacs_is_granted_changeStatus;
	
	$pacs_is_granted_changeStatus	= {% if _PACS_ALLOW_CREATE == true or _PACS_ALLOW_EDIT == true %} true {% else %} false {% endif %};
    </script>

    {# bootstrap-editable #}
    {#<script type="text/javascript" src="{{ asset('bundles/minsalsimagd/plugin/bootstrap-table-master/dist/extensions/editable/bootstrap-table-editable.min.js') }}" ></script>#}
    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/js/simagd-label-bootstrap-table-editable.js') }}" ></script>
    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/plugin/bootstrap3-editable-1.5.1/bootstrap3-editable/js/bootstrap-editable.min.js') }}" ></script>

    {# Scripts pacs #}
    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/js/RyxCtlConexionPacsEstablecimientoAdmin/pacs_list_v2.js') }}" ></script>

{% endblock %}

{% block simagd_navbar_menu_label %}
    <i class="fa fa-link"></i> <i class="fa fa-refresh"></i> <i class="fa fa-tasks"></i> Conexiones a servidores PACS
{% endblock %}

{% block simagd_navbar_left_nav %}
    <li class="list-table-link-navbar active {% if _PACS_ALLOW_LIST == false %} disabled link-full-disabled {% endif %}">
	<a   href="javascript:void(0)" id="show-table-pacs-establecimiento-list" data-divtabletarget="div-resultado-pacs-establecimiento"
	    {% if _PACS_ALLOW_LIST == false %} disabled="disabled" {% endif %}>
	    <span class="text-info"><i class="fa fa-refresh"></i> <i class="fa fa-tasks"></i> </span> Conexiones <span class="sr-only">(current)</span>
	</a>
    </li>
{% endblock %}

{% block simagd_navbar_right_nav %}
    <li class="dropdown">
	<a   href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="text-info"><i class="fa fa-plus-circle"></i> <i class="fa fa-tasks"></i> </span> Registrar <span class="caret"></span></a>
	<ul class="dropdown-menu" role="menu">
	    <li {% if _PACS_ALLOW_CREATE == false %} class="disabled link-full-disabled" {% endif %}>
		<a   href="{% if _PACS_ALLOW_CREATE == true %} {{ path('simagd_pacs_create') }} {% else %} javascript:void(0) {% endif %}" id="nuevoServidorPacsBtn" target="_blank"
		    {% if _PACS_ALLOW_CREATE == false %} disabled="disabled" {% endif %}> <span class="glyphicon glyphicon-cog "></span> Nueva conexi贸n
		</a>
	    </li>
	</ul>
    </li>
{% endblock %}

{% block sonata_admin_content -%}
    {{ parent() }}

    {% if _PACS_ALLOW_LIST == true %}
        <!-- toolbar for table-lista-pacs-establecimiento -->
        {% include 'MinsalSimagdBundle:Menu:simagd_bstable_toolbar.html.twig' ignore missing with { 'code_entity': 'pacs' } %}
        <!-- END --| toolbar for table-lista-pacs-establecimiento -->
        
	<div id="div-resultado-pacs-establecimiento" class="menu-listas-conexiones-pacs" data-refresh-url="{{ path('simagd_pacs_generateData') }}">
	    <table class="table table-condensed" id="table-lista-pacs-establecimiento"
		    data-toggle="table"
		    data-id-field="pacs_id"
		    data-url="{% if _PACS_ALLOW_CREATE == false and _PACS_ALLOW_EDIT == false %}{{ path('simagd_pacs_generateData') }}{% endif %}"
		    data-backup-url="simagd_pacs_generateData"
		    data-toolbar="#bs_pacs_toolbar"
		    data-cache="false"
		    data-show-refresh="true"
		    data-show-toggle="true"
		    data-show-columns="true"
		    data-search="true"
		    data-select-item-name="listaPacsEstablecimientoToolbar"
		    data-pagination="true"
		    data-page-list="[5, 10, 15, 25, 50, 75, 100{#, 200, 300, 500, 1000, All#}]"
		    {#data-sort-name="id"
		    data-sort-order="desc"#}
		    data-classes="table table-hover table-condensed table-no-bordered"
		    data-height="760">
		<thead>
		    <tr style="background-color: #183f52; color: #fff;">
			{#<th data-field="action" data-switchable="false" class="col-md-2" data-halign="center" data-align="center" data-sortable="false">Acciones</th>#}
			<th data-field="pacs_id" data-filter-bstable-apply="true" data-filter-bstable-type="number" class="col-md-1" data-visible="false" data-align="center" data-halign="center" data-sortable="true">ID</th>
			<th data-field="pacs_establecimiento" data-filter-bstable-apply="true" data-filter-bstable-by="stdpacs_id" data-filter-bstable-type="select2" data-switchable="false" class="col-md-2" data-align="left" data-halign="center" data-sortable="true">Establecimiento</th>
			<th data-field="pacs_nombreConexion" data-filter-bstable-apply="true" data-filter-bstable-type="text" class="col-md-1" data-align="left" data-halign="center" data-sortable="true">Conexi贸n</th>
			<th data-field="pacs_ip" class="col-md-1" data-filter-bstable-apply="true" data-filter-bstable-type="text" data-align="left" data-halign="center" data-sortable="true">Direcci贸n IP</th>
			<th data-field="pacs_host" data-visible="false" data-filter-bstable-apply="true" data-filter-bstable-type="text" class="col-md-1" data-align="left" data-halign="center" data-sortable="true">Host</th>
			<th data-field="pacs_duracionEstudio" data-filter-bstable-apply="true" data-filter-bstable-type="number" data-visible="false" data-formatter="duracionEstudioFormatter" class="col-md-1" data-align="left" data-halign="center" data-sortable="true">Duraci贸n de Estudios</th>
			<th data-field="pacs_nombreBaseDatos" data-filter-bstable-apply="true" data-filter-bstable-type="text" data-visible="false" class="col-md-1" data-align="left" data-halign="center" data-sortable="true">Nombre de BD</th>
			<th data-field="pacs_habilitado" data-filter-bstable-apply="true" data-filter-bstable-type="boolean" {% if _PACS_ALLOW_CREATE == false and _PACS_ALLOW_EDIT == false %} data-formatter="habilitadoFormatter" {% endif %} class="col-md-1" data-align="left" data-halign="center" data-sortable="true">Habilitado</th>
			<th data-field="mtrBd_nombre" data-filter-bstable-apply="true" data-filter-bstable-by="mtrBd_id" data-filter-bstable-type="select2" data-visible="false" class="col-md-1" data-align="left" data-halign="center" data-sortable="true">Gestor de BD</th>
			<th data-field="pacs_usuario" data-visible="false" class="col-md-1" data-align="right" data-halign="center" data-sortable="true">Usuario de BD</th>
			<th data-field="pacs_puerto" data-visible="false" class="col-md-1" data-align="right" data-halign="center" data-sortable="true">Puerto</th>
			<th data-field="pacs_fechaHoraReg" data-filter-bstable-apply="true" data-filter-bstable-type="combodate" data-formatter="simagdDateTimeFormatter" class="col-md-1" data-align="right" data-halign="center" data-sortable="true">Registrado</th>
			<th data-field="pacs_fechaHoraMod" data-formatter="simagdDateTimeFormatter" data-visible="false" class="col-md-1" data-align="right" data-halign="center" data-sortable="true">Editado</th>
			<th data-field="action" data-formatter="actionFormatter" data-events="actionEvents" class="col-md-2" data-align="left" data-halign="center"><span class="glyphicon glyphicon-cog"></span></th>
		    </tr>
		</thead>
	    </table>
	</div>
    {% endif %}

    {% if _PACS_ALLOW_VIEW == true %}
        {#{% include 'MinsalSimagdBundle:show_container_fullEntity:pacs_total_info_modal_v2.html.twig' %}#}    {# pacs #}
    {% endif %}
    
{% endblock %}
