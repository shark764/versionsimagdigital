{# empty Twig template #}

{% extends 'MinsalSimagdBundle::simagd_base_edit.html.twig' %}

{% set _pacienteTitle = object.idLectura is not null ? object.idLectura.idEstudio.idExpediente.idPaciente|truncate(50) : 'No hay lectura' %}
{% set _diagMessageTemplate = action is defined and action == 'edit' ?
        '<i class="fa fa-clipboard"></i> <i class="fa fa-pencil-square-o"></i> Edición de Diagnóstico para estudio de: <i>' ~ _pacienteTitle ~ '</i>' :
        '<i class="fa fa-clipboard"></i> <i class="fa fa-plus-circle"></i> Transcripción de lectura para estudio de: <i>' ~ _pacienteTitle ~ '</i>' %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/js/ImgEstudioPacienteAdmin/est_crear_ventana_estudio.js') }}" ></script>

    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/js/ImgNotaDiagnosticoAdmin/notdiag_config_notaDiag_modal.js') }}" ></script>
    
    {% include 'MinsalSimagdBundle:ImgDiagnosticoAdmin:diag_funcionesClienteServidor.js.twig' %}
    
    {% include 'MinsalSimagdBundle:ImgDiagnosticoAdmin:diag_bootstrapValidator.js.twig' %}
    
    {% if ( object.idLectura is not null ) and ( is_granted('ROLE_MINSAL_SIMAGD_ADMIN_IMG_LECTURA_CREATE') or is_granted('ROLE_ADMIN') ) %}
        {% include 'MinsalSimagdBundle:ImgEstudioPacienteAdmin:est_recuperarEstudio.js.twig'
                        ignore missing with { 'estudioPaciente': object.idLectura.idEstudio } %}
    {% endif %}
{% endblock %}

{% block actions %}
    {#<li>{% include 'SonataAdminBundle:Button:show_button.html.twig' %}</li>#}
    <li>{% include 'SonataAdminBundle:Button:history_button.html.twig' %}</li>
    <li>{% include 'SonataAdminBundle:Button:acl_button.html.twig' %}</li>
    <li>{% include 'SonataAdminBundle:Button:list_button.html.twig' %}</li>
    {#<li>{% include 'SonataAdminBundle:Button:create_button.html.twig' %}</li>#}
{% endblock %}

{% block simagd_form_navbar_brand_title %}
    <span class="navbar-brand">
        <span class="label label-{{ action is defined and action == 'edit' ? 'primary-v4' : 'element-v2' }}"> {{ _diagMessageTemplate|raw }} </span>
    </span>
{% endblock %}
    
{% block form %}
    {% set diag_vars = { 'simagd_title': 'FORMULARIO PARA TRANSCRIPCIÓN DE INTERPRETACIÓN RADIOLÓGICA',
                        'simagd_message': 'Llene este formulario para registrar la interpretación dada por Médico radiólogo'
    }%}
    {% include 'MinsalSimagdBundle:Menu:simagd_cabecera.html.twig' ignore missing with diag_vars %}
    
    {{ block('parentForm') }}
    
    {#  http://getbootstrap.com/2.3.2/components.html#navs --> Tabs on the left --> VENTANITAS SUPPORT 
        http://getbootstrap.com/2.3.2/base-css.html#forms --> PLANTE DE LOS FORM
    #}
{% endblock %}

{# muestra de información de apoyo #}
{% block custom_entity_support %}
    <div id="custom-entity-content-body">
        {% if object.idLectura is not null %}
            {{ render(controller( 'MinsalSimagdBundle:ImgDiagnosticoAdmin:mostrarInformacionModal',
                                                    { 'idLecturaPadre' : object.idLectura.id,
                                                        'id' : object.id ? object.id : -1,
                                                        '_sonata_admin' : 'minsal_simagd.admin.img_diagnostico' } )) }}
        {% endif %}
    </div>
{% endblock %}