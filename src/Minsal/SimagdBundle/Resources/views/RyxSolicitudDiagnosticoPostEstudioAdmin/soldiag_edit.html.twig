{# empty Twig template #}

{% extends 'MinsalSimagdBundle::simagd_base_edit.html.twig' %}

{% set _pacienteTitle = object.idSolicitudEstudio is not null ? object.idSolicitudEstudio.idExpediente.idPaciente|truncate(50) : 'No hay preinscripción' %}
{% set _soldiagMessageTemplate = action is defined and action == 'edit' ?
        '<i class="fa fa-paperclip"></i> <i class="fa fa-pencil-square-o"></i> Edición de solicitud de diagnóstico para: <i>' ~ _pacienteTitle ~ '</i>' :
        '<i class="fa fa-paperclip"></i> <i class="fa fa-plus-circle"></i> Solicitar diagnóstico para estudio de: <i>' ~ _pacienteTitle ~ '</i>' %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/js/RyxSolicitudDiagnosticoPostEstudioAdmin/soldiag_config_picker.js') }}" ></script>

    <script type="text/javascript" src="{{ asset('bundles/minsalsimagd/js/RyxEstudioPorImagenesAdmin/est_crear_ventana_estudio.js') }}" ></script>
    
    {% include 'MinsalSimagdBundle:RyxSolicitudDiagnosticoPostEstudioAdmin:soldiag_funcionesClienteServidor.js.twig' %}
    
    {% include 'MinsalSimagdBundle:RyxSolicitudDiagnosticoPostEstudioAdmin:soldiag_bootstrapValidator.js.twig' %}
    
    {% if ( object.idEstudio is not null ) and ( ( is_granted('ROLE_MINSAL_SIMAGD_ADMIN_IMG_SOLICITUD_DIAGNOSTICO_CREATE') and
                                is_granted('ROLE_MINSAL_SIMAGD_ADMIN_IMG_ESTUDIO_PACIENTE_VIEW') ) or is_granted('ROLE_ADMIN') ) %}
        {% include 'MinsalSimagdBundle:RyxEstudioPorImagenesAdmin:est_recuperarEstudio.js.twig'
                        ignore missing with { 'estudioPaciente': object.idEstudio } %}
    {% endif %}
{% endblock %}

{% block actions %}
    {#<li>{% include 'SonataAdminBundle:Button:show_button.html.twig' %}</li>#}
    <li>{% include 'SonataAdminBundle:Button:history_button.html.twig' %}</li>
    <li>{% include 'SonataAdminBundle:Button:acl_button.html.twig' %}</li>
    <li>{% include 'SonataAdminBundle:Button:list_button.html.twig' %}</li>
    {#<li>{% include 'SonataAdminBundle:Button:create_button.html.twig' %}</li>#}
{% endblock %}

{% block simagd_form_navbar_brand_title %}
    <span class="navbar-brand">
        <span class="label label-{{ action is defined and action == 'edit' ? 'primary-v4' : 'element-v2' }}"> {{ _soldiagMessageTemplate|raw }} </span>
    </span>
{% endblock %}
    
{% block form %}
    {% set soldiag_vars = { 'simagd_title': 'FORMULARIO PARA SOLICITAR DIAGNÓSTICO DE ESTUDIO IMAGENOLÓGICO',
                        'simagd_message': 'Llene este formulario para solicitar diagnóstico para el estudio de Imagenología que preinscribió'
    }%}
    {% include 'MinsalSimagdBundle:Menu:simagd_cabecera.html.twig' ignore missing with soldiag_vars %}
    
    {{ block('parentForm') }}
{% endblock %}

{# muestra de información de apoyo #}
{% block custom_entity_support %}
    <div id="custom-entity-content-body">
        {% if object.idSolicitudEstudio is not null and object.idEstudio is not null %}
            {{ render(controller( 'MinsalSimagdBundle:RyxSolicitudDiagnosticoPostEstudioAdmin:mostrarInformacionModal',
                                                    { 'idSolicitudEstudioPadre' : object.idSolicitudEstudio.id,
                                                        'idEstudioPadre' : object.idEstudio.id,
                                                        'id' : object.id ? object.id : -1,
                                                        '_sonata_admin' : 'minsal_simagd.admin.img_solicitud_diagnostico' } )) }}
        {% endif %}
    </div>
{% endblock %}