        var generate = function(el, slug, emrg/* = 0, type = 'list'*/) {
			if (emrg === undefined) {
		        emrg = 0;
		    }
            ////////
            var $table = jQuery('#ryx_target_bstable');
            ////////
            $table.bootstrapTable('showLoading');

            $url = null;
			switch (slug) {
				case 'radiological_result':
					$url = 'simagd_lectura_generateTable';
					break;
				case 'transcribed_diagnosis':
					$url = 'simagd_diagnostico_generateTable';
					break;
				case 'second_medical_opinions':
					$url = 'simagd_nota_generateTable';
					break;
				case 'further_study_request':
					$url = 'simagd_solicitud_estudio_complementario_generateTable';
					break;
				default:
					break;
			}

            // if (slug === 'transcribed_diagnosis') {
            //     emrg
            // }

            var type = jQuery('input[name=_results_dashboard_display_type]:checked').val();

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: Routing.generate($url),
                data: {
                    _xml_http_request: true,
                    id: 'id',
                    slug: slug,
                    type: type,
                    emrg: emrg,
                },
                success: function(response) {
                    ////////
                    $.each(response.options, function(i, opt) {
                        if (typeof opt === 'string' && opt.indexOf('__FUNCTIONS_CALL__.functions') !== -1) {
                            var namespaces = opt.split('.');
                            var func = namespaces.pop();
                            var context = window;
                            for(var x = 0; x < namespaces.length; x++) {
                                context = context[namespaces[x]];
                            }
                            response.options[i] = context[func];  // set function
                        }
                    });
                    ////////

                    $table
                        .bootstrapTable('destroy')
                        .bootstrapTable(response.options);
                    // $table.bootstrapTable('refreshOptions', response.options);

                    // $('#ryx_target_bstable').scrollTop(25000);
                },
                error: function(err) {
                    console.log(err.error, err.responseText);
                }
            });
        }

