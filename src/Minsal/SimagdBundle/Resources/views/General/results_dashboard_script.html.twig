{% autoescape false %}

	<script type="text/javascript">
        var _fn_show_object_detail = function(el, slug, id) {
            window.alert(slug + '\n' + id);
        }

        var generate = function(el, slug, emrg/* = 0, type = 'list'*/) {
			if (emrg === undefined) {
		        emrg = 0;
		    }
            ////////
            var $table = jQuery('#ryx_target_bstable');
            ////////
            $table.bootstrapTable('showLoading');

            var $url = null;
			switch (slug) {
				case 'radiological_result':
					$url = 'simagd_lectura_generateTable';
					break;
				case 'transcribed_diagnosis':
					$url = 'simagd_diagnostico_generateTable';
					break;
				case 'second_medical_opinions':
					$url = 'simagd_segunda_opinion_medica_generateTable';
					break;
				case 'further_study_request':
					$url = 'simagd_solicitud_estudio_complementario_generateTable';
					break;
				default:
					break;
			}

            var type = jQuery('input[name=_results_dashboard_display_type]:checked').val();

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: Routing.generate($url),
                data: {
                    _xml_http_request: true,
                    id: 'id',
                    slug: slug,
                    type: type,
                    emrg: emrg,
                },
                success: function(response) {
                    ////////
                    $table
                        .bootstrapTable('destroy')
                        .bootstrapTable(response.options);
                    ////////
                },
                error: function(err) {
                    console.log(err.error, err.responseText);
                }
            });
        }

        jQuery(document).ready(function() {
            /*
             *
             * @type type
             * Get Table definition
             */

            //////
            var $table = jQuery('#ryx_target_bstable');
            ////////
            // $table.bootstrapTable('showLoading');

            ////////
            var DEFAULT_TABLE_OPTIONS = JSON.parse('{{ DEFAULT_TABLE_OPTIONS|json_encode|e('js')|raw }}');

            $table
                .bootstrapTable('destroy')
                .bootstrapTable(DEFAULT_TABLE_OPTIONS);
            ////////


            //////////////////////////////////////////////////////////////////////////
            //////// change content type - worklist
            //////////////////////////////////////////////////////////////////////////
            var __DOM__worklistDisplayType = jQuery('input[name=_results_dashboard_display_type]');

            __DOM__worklistDisplayType.on('ifChecked', function(e) {

                        jQuery('#_results_dashboard_display_items li.active').find('a').triggerHandler('click');

                        if (jQuery('#_results_dashboard_display_items li.active').hasClass('dropdown')) {
                            jQuery('#_results_dashboard_display_items li.active').find('li.active').find('a').triggerHandler('click');
                        }

            });
            //////////////////////////////////////////////////////////////////////////
            //////////////////////////////////////////////////////////////////////////

			// jQuery('#_switch_display').iCheck('destroy').bootstrapSwitch();
        });

        (function ($) {
            /*
             *
             * @type Array
             * Global variables for plugin
             */
            window.__FUNCTIONS_CALL__ = {};   // --| build data collection

            /*
             * Collection of functions / fc options
             */
            __FUNCTIONS_CALL__.functions = {
                onContextMenuItem: function(row, $el) {
                    /////////////////////////////////////////////////////
                    //////// RADIOLOGICAL RESULT - CONTEXT MENU
                    /////////////////////////////////////////////////////
                    if($el.data('item') === 'radiologicalresult_show')
                    {
                        var url = Routing.generate('simagd_lectura_show', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'radiologicalresult_edit')
                    {
                        var url = Routing.generate('simagd_lectura_edit', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'radiologicalresult_delete')
                    {
                        var url = Routing.generate('simagd_lectura_delete', {id: row.id, confirmation: false});
                    }
                    else if($el.data('item') === 'radiologicalresult_goto')
                    {
                        var url = Routing.generate('simagd_imagenologia_digital_worklist', {menu: 'undiagnosed_studies', lct_id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'radiologicalresult_checktranscript')
                    {
                        var url = Routing.generate('simagd_imagenologia_digital_worklist', {menu: 'transcribed_diagnosis', lct_id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'radiologicalresult_studydownload')
                    {
                        var url = Routing.generate('simagd_lectura_delete', {id: row.id, confirmation: false});
                    }
                    else if($el.data('item') === 'radiologicalresult_create')
                    {
                        var url = Routing.generate('simagd_lectura_create', {id: row.id, mode: 'standard'});
                    }

                    /////////////////////////////////////////////////////
                    //////// TRANSCRIBED DIAGNOSIS - CONTEXT MENU
                    /////////////////////////////////////////////////////
                    else if($el.data('item') === 'transcribeddiagnosis_show')
                    {
                        var url = Routing.generate('simagd_diagnostico_show', {id: row.id, mode: 'standard', worklist: true, worklist_id: row.id});
                    }
                    else if($el.data('item') === 'transcribeddiagnosis_edit')
                    {
                        var url = Routing.generate('simagd_diagnostico_edit', {id: row.id, mode: 'standard', worklist: true, worklist_id: row.id});
                        var url = Routing.generate('simagd_lectura_edit', {id: row.lct_id, mode: 'standard', worklist: true, worklist_id: row.id});
                    }
                    else if($el.data('item') === 'transcribeddiagnosis_delete')
                    {
                        var url = Routing.generate('simagd_sin_transcribir_delete', {id: row.id, confirmation: false});
                    }
                    else if($el.data('item') === 'transcribeddiagnosis_goto')
                    {
                        var url = Routing.generate('simagd_imagenologia_digital_worklist', {menu: 'transcribed_diagnosis', id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'transcribeddiagnosis_approve')
                    {
                        var url = Routing.generate('simagd_diagnostico_approve', {id: row.id, approve: true, confirmation: false});
                    }
                    else if($el.data('item') === 'transcribeddiagnosis_reprobate')
                    {
                        var url = Routing.generate('simagd_diagnostico_approve', {id: row.id, approve: false, confirmation: false});
                    }
                    else if($el.data('item') === 'transcribeddiagnosis_studydownload')
                    {
                        var url = Routing.generate('simagd_lectura_delete', {id: row.id, confirmation: false});
                    }
                    else if($el.data('item') === 'transcribeddiagnosis_create')
                    {
                        var url = Routing.generate('simagd_sin_transcribir_create', {lct_id: row.id, mode: 'standard'});
                    }

                    /////////////////////////////////////////////////////
                    //////// SECOND MEDICAL OPINIONS - CONTEXT MENU
                    /////////////////////////////////////////////////////
                    else if($el.data('item') === 'secondmedicalopinions_show')
                    {
                        var url = Routing.generate('simagd_segunda_opinion_medica_show', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'secondmedicalopinions_edit')
                    {
                        var url = Routing.generate('simagd_segunda_opinion_medica_edit', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'secondmedicalopinions_delete')
                    {
                        var url = Routing.generate('simagd_segunda_opinion_medica_delete', {id: row.id, confirmation: false});
                    }
                    else if($el.data('item') === 'secondmedicalopinions_studydownload')
                    {
                        var url = Routing.generate('simagd_lectura_show', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'secondmedicalopinions_create')
                    {
                        var url = Routing.generate('simagd_segunda_opinion_medica_create', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'secondmedicalopinions_addtothis')
                    {
                        var url = Routing.generate('simagd_segunda_opinion_medica_create', {id: row.id, preview: row.id, mode: 'standard'});
                    }

                    /////////////////////////////////////////////////////
                    //////// FURTHER STUDY REQUEST - CONTEXT MENU
                    /////////////////////////////////////////////////////
                    else if($el.data('item') === 'furtherstudyrequest_show')
                    {
                        var url = Routing.generate('simagd_solicitud_estudio_complementario_show', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'furtherstudyrequest_edit')
                    {
                        var url = Routing.generate('simagd_solicitud_estudio_complementario_edit', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'furtherstudyrequest_delete')
                    {
                        var url = Routing.generate('simagd_solicitud_estudio_complementario_delete', {id: row.id, confirmation: false});
                    }
                    else if($el.data('item') === 'furtherstudyrequest_studydownload')
                    {
                        var url = Routing.generate('simagd_lectura_show', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'furtherstudyrequest_create')
                    {
                        var url = Routing.generate('simagd_solicitud_estudio_complementario_create', {id: row.id, mode: 'standard'});
                    }
                    else if($el.data('item') === 'furtherstudyrequest_addtothis')
                    {
                        var url = Routing.generate('simagd_solicitud_estudio_complementario_create', {id: row.id, preview: row.id, mode: 'standard'});
                    }
                    // end
                },
            };  // --| build function object

        }(jQuery));

    </script>

